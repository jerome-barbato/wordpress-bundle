{
  "name":"metabolism/wordpress-bundle",
  "type": "symfony-bundle",
  "version": "1.4.0",
  "description": "Use Wordpress 5 as a backend for a Symfony 4 application",
  "license": "GPL-3.0-or-later",
  "require": {
    "php" : ">=7.1.0",
    "ext-zip" : "*",
    "ext-fileinfo" : "*",
    "ext-json" : "*",
    "ext-mbstring" : "*",
    "metabolism/wordpress-core-installer": "1.0.*",
    "metabolism/package-actions": "dev-develop",
    "johnpbloch/wordpress-core": "5.*",
    "ifsnop/mysqldump-php":"2.*",
    "dflydev/dot-access-data":"2.*",
    "enshrined/svg-sanitize": "0.*",
    "intervention/image": "2.*"
  },
  "suggest": {
    "elliotcondon/advanced-custom-fields-pro": "Customise WordPress with powerful, professional and intuitive fields.",
    "metabolism/acf-extensions": "Component extension for ACF",
    "wpackagist-plugin/wp-smartcrop": "Set the 'focal point' of any image, right from the media library",
    "wpackagist-plugin/multisite-language-switcher": "Add multilingual support using a WordPress multisite",
    "wpackagist-plugin/wordpress-seo": "The favorite WordPress SEO plugin of millions of users worldwide!"
  },
  "extra": {
    "installer-paths": {
      "public/wp-bundle/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "public/wp-bundle/plugins/{$name}/": ["type:wordpress-plugin"],
      "public/edition/": ["type:wordpress-core"]
    },
    "post-package-install": {
      "create": {
        "metabolism/wordpress-bundle": {
          "public/uploads": 666,
          "public/wp-bundle/upgrade": 666,
          "public/wp-bundle/languages": 666,
          "config/acf-json": 666
        }
      },
      "copy": {
        "metabolism/wordpress-bundle": {
          "tools/wp-config.php": "public/wp-config.php",
          "samples/.htaccess": "public/.htaccess",
          "samples/config/wordpress.yml": "config/wordpress.yml",
          "samples/service/Context.php": "src/Service/Context.php",
          "samples/controller/BlogController.php": "src/Controller/BlogController.php",
          "samples/controller/AdminController.php": "src/Controller/AdminController.php",
          "samples/controller/FrontController.php": "src/Controller/FrontController.php",
          "samples/template/generic.html.twig": "templates/generic.html.twig"
        }
      },
      "symlink": {
        "metabolism/wordpress-bundle": {
          "README.md": "doc/wordpress-bundle.md",
          "tools/mu-plugin.php": "public/wp-bundle/mu-plugins/wp-bundle.php"
        }
      }
    }
  },
  "autoload" : {
    "psr-4" : {
      "Metabolism\\WordpressBundle\\" : "src/"
    }
  }
}
